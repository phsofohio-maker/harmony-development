rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Organization document storage
    match /organizations/{orgId}/documents/{patientId}/{fileName} {
      // Read: authenticated users in same org
      allow read: if request.auth != null 
                  && request.auth.token.orgId == orgId;
      
      // Write: only Cloud Functions (admin SDK bypasses rules)
      allow write: if false;
    }
    
    // Template assets (logos, headers) - read-only for org members
    match /organizations/{orgId}/assets/{assetName} {
      allow read: if request.auth != null 
                  && request.auth.token.orgId == orgId;
      allow write: if false;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}